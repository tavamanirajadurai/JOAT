<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cpay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mount"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.rajad.joat.cpay">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="@color/colorAccent">


        <ImageView
            android:layout_width="150dp"
            app:srcCompat="@drawable/carpentrytools"
            android:id="@+id/imageView4"
            android:layout_height="150dp"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="CARPENTARY"
            android:textColor="#22a6a6"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-50dp">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardElevation="30dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22a6a6"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>








    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-50dp">
        <android.support.v7.widget.CardView
            android:layout_width="20dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardElevation="20dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textVieww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22a6a6"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"/>


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/wage"
                    android:layout_above="@+id/textVieww"
                    android:layout_centerHorizontal="true"
                     />




            </RelativeLayout>

        </android.support.v7.widget.CardView>








    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="ENTER YOUR CARPENTARY PROBLEM"
        android:textColorHint="#FFFFFF"
        android:textColor="@color/cardview_light_background"/>

    <Button
        android:id="@+id/cpayb"
       android:backgroundTint="@color/colorAccent"
        android:text="PROCEED"
        android:textColor="#22a6a6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
